<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="oval">

            <solid android:color="@color/white" />
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:left="3px"
        android:right="3px"
        android:top="3px"
        android:bottom="3px">

        <shape  android:shape="oval">

            <solid android:color="@color/white" />
            <corners android:radius="7dp" />


        </shape>

    </item>


</layer-list>